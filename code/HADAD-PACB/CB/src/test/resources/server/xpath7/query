q<ft1, lt1>  :- 
	root (r),
	child (r, x1), tag (x1, "site"),
	desc (x1, x2),
	child (x2, p), tag (p, "person"),
    desc (p, x3),
	child (x3, s), tag (s, "ssn"),
    text (s, t),
	child (p, n1), tag (n1, "name"),
	child (n1, f), tag (f, "first"),
	text (f, ft), eq (ft, ft1),
	child (p, n2), tag (n2, "name"),
	child (n2, l), tag (l, "last"),
	text (l, lt), eq (lt, lt1);
		
		# Slow query
q<ft1, lt1>  :- 
	root (r),
	child (r, x1), tag (x1, "site"),
	desc (x1, x2),
	child (x2, p), tag (p, "person"),
	desc (p, x3),
	child (x3, s), tag (s, "ssn"),
    text (s, t),
	desc (p, x0),
	child (x0, a), tag (a, "address"),
	child (p, n1), tag (n1, "name"),
	child (n1, f), tag (f, "first"),
	text (f, ft), eq (ft, ft1),
	child (p, n2), tag (n2, "name"),
	child (n2, l), tag (l, "last"),
	text (l, lt), eq (lt, lt1);

q<ft1, lt1, zt1>  :- 
	root (r),
	child (r, x1), tag (x1, "site"),
	desc (x1, x2),
	child (x2, p), tag (p, "person"),
	desc (p, x3),
	child (x3, s), tag (s, "ssn"),
    text (s, t),
	desc (p, x0),
	child (x0, a), tag (a, "address"),
	child (p, n1), tag (n1, "name"),
	child (n1, f), tag (f, "first"),
	text (f, ft), eq (ft, ft1),
	child (p, n2), tag (n2, "name"),
	child (n2, l), tag (l, "last"),
	text (l, lt), eq (lt, lt1),
	child (a, z), tag (z, "zip"),
	text (z, zt), eq (zt, zt1);
		
q<ft1, lt1, zt1>  :- 
	root (r),
	child (r, x1), tag (x1, "site"),
	desc (x1, x2),
	child (x2, p), tag (p, "person"),
	desc (p, x3),
	child (x3, s), tag (s, "ssn"),
    text (s, t),
	desc (p, x0),
	child (x0, a), tag (a, "address"),
	attr (a, "state"), val (a, "state", "CA"),
	child (a, x4), tag (x4, "city"),
	text (x4, c), eq (c, "SanDiego"),
	child (p, n1), tag (n1, "name"),
	child (n1, f), tag (f, "first"),
	text (f, ft), eq (ft, ft1),
	child (p, n2), tag (n2, "name"),
	child (n2, l), tag (l, "last"),
	text (l, lt), eq (lt, lt1),
	child (a, z), tag (z, "zip"),
	text (z, zt), eq (zt, zt1);