q<ft1, lt1>  :- 
	root (r),
	child (r, x1), tag (x1, "site"),
	desc (x1, x2),
	child (x2, p), tag (p, "person"),
	desc (p, x3),
	child (x3, s), tag (s, "ssn"),
    text (s, t),
	desc (p, x0),
	child (x0, a), tag (a, "address"),
	child (p, n1), tag (n1, "name"),
	child (n1, f), tag (f, "first"),
	text (f, ft), eq (ft, ft1),
	child (p, n2), tag (n2, "name"),
	child (n2, l), tag (l, "last"),
	text (l, lt), eq (lt, lt1);